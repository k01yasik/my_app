<h1>Редактирование данных машины</h1>
<%= form_for :post_sh, :url => { :action => :update },
             :method => :put do |f| %>
    <p>
      <%= f.label 'Марка' %><br>
      <%= f.text_field :brand %>
    </p>

    <p>
      <%= f.label 'Модель' %><br>
      <%= f.text_field :model %>
    </p>

    <p>
      <%= f.label 'Номер авто' %><br>
      <%= f.text_field :nauto %>
    </p>

    <p>
      <%= f.submit 'Обновить данные', {:class => 'btn btn-primary'}%>
    </p>
<% end %>

<%= link_to 'К списку машин владельца', :action => :index %>