<h1>Машины: <%= @post.fam%> <%= @post.name%></h1>

<table class="table table-hover">
  <tr>
    <th>Марка</th>
    <th>Модель</th>
    <th>Номер авто</th>
  </tr>

  <% @post_sh.each do |post| %>
      <tr>
        <td><%= post.brand %></td>
        <td><%= post.model %></td>
        <td><%= post.nauto %></td>
        <td><%= link_to 'Редактировать', :action => :edit, :id => post.id %></td>
        <td><%= link_to 'Удалить', {:action => :destroy, :id => post.id}, :method => :delete, :confirm => 'Вы уверены?' %></td>
      </tr>
  <% end %>
</table>
<p><%= link_to 'Добавить машину', :action => :new %></p>
<p><%= link_to 'К списку владельцев', :controller => :owners, :action => :index %></p>