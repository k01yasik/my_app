<h1>Машины: <%= @post.fam%> <%= @post.name%></h1>

<table class="table table-hover">
  <tr>
    <th>Brand</th>
    <th>Model</th>
    <th>Nauto</th>
  </tr>

  <% @post_sh.each do |post| %>
      <tr>
        <td><%= post.brand %></td>
        <td><%= post.model %></td>
        <td><%= post.nauto %></td>
        <td><%= link_to 'Показать', :action => :show, :id => post.id %></td>
        <td><%= link_to 'Редактировать', :action => :edit, :id => post.id %></td>
        <td><%= link_to 'Удалить', {:action => :destroy, :id => post.id}, :method => :delete, :confirm => 'Вы уверены?' %></td>
      </tr>
  <% end %>
</table>
